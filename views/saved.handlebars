<div class="container">

    <div class="col-md-12 jumbotron">
        <h1> Saved Articles</h1>

        <button type="button" class="btn btn-info" id="home">Home</button>

        <button type="button" class="btn btn-warning" id="saved-articles">Saved Articles</button>
    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h4>{{this.title}}</h4>
                        <p> {{this.summary}}</p>
                        <button type="button" class="btn btn-success note" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
                        <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                    </div>
                </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!--Clicked Notes Modal-->
{{#each article}}
    {{> notes-modal }}
{{/each}}